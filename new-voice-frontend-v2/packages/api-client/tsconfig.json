{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@new-voice/types": ["../types/src/index"],
      "@new-voice/types/*": ["../types/src/*"]
    }
  },
  "include": ["src/**/*", "../types/src/**/*"]
}
